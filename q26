#include <stdio.h>
#include <math.h>  // Biblioteca para a função pow()

int main() {
    float a, b, c, mediaAritmetica, mediaGeometrica;

    // Leitura dos três números
    printf("Digite o primeiro número: ");
    scanf("%f", &a);
    
    printf("Digite o segundo número: ");
    scanf("%f", &b);
    
    printf("Digite o terceiro número: ");
    scanf("%f", &c);

    // Calculando a média aritmética
    mediaAritmetica = (a + b + c) / 3;

    // Calculando a média geométrica
    mediaGeometrica = pow(a * b * c, 1.0 / 3.0);  // Raiz cúbica de a * b * c

    // Exibindo os resultados
    printf("Média Aritmética: %.2f\n", mediaAritmetica);
    printf("Média Geométrica: %.2f\n", mediaGeometrica);

    return 0;
}
