#include <stdio.h>

int main() {
    int x, n, resultado;

    // Leitura dos valores de x e n
    printf("Digite o valor de x: ");
    scanf("%d", &x);
    printf("Digite o valor de n: ");
    scanf("%d", &n);

    // Calculando o produto de x por 2^n usando deslocamento Ã  esquerda
    resultado = x << n;

    // Exibindo o resultado
    printf("Resultado de %d * 2^%d = %d\n", x, n, resultado);

    return 0;
}
